rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.resource.data.uid == userId;
    }

    // Helper function to check if a user is an admin
    function isAdmin() {
      // Check if the user document exists and has the role 'admin'
      return exists(/databases/$(database)/documents/donors/$(request.resource.data.uid)) &&
             get(/databases/$(database)/documents/donors/$(request.resource.data.uid)).data.role == 'admin';
    }

    match /donors/{userId} {
      // ANYONE can create a user profile (signup)
      allow create: if true;
      
      // LOGGED-IN USERS can read, update or delete their OWN profile
      // ADMINS can read, update or delete ANY profile
      allow read, update, delete: if isOwner(userId) || isAdmin();
    }

    // Public read access for collections that are needed for the website to function for visitors
    match /{collection}/{docId} {
      allow read: if collection in ['blogPosts', 'faqs', 'teamMembers', 'testimonials', 'bloodRequests'];
    }

    // Admins can manage these collections
    match /blogPosts/{postId} {
        allow write: if isAdmin();
    }
    match /faqs/{faqId} {
        allow write: if isAdmin();
    }
    match /teamMembers/{memberId} {
        allow write: if isAdmin();
    }
    match /testimonials/{testimonialId} {
        allow write: if isAdmin();
    }
    match /bloodRequests/{requestId} {
        // Any logged-in user can create a request, but only admins can update/delete
        allow create: if request.resource.data.uid != null;
        allow update, delete: if isAdmin();
    }
  }
}
