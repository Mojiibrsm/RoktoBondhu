rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.role == 'admin';
    }

    // Donors Collection
    // - Users can read their own profile.
    // - Admins can read any donor profile.
    // - Users can create their own profile upon signup.
    // - Users can update their own profile.
    // - Admins can update any user's profile (e.g., to change role).
    // - Deletion is restricted to admins only.
    match /donors/{userId} {
      allow get: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Public Collections (Read-only for authenticated users)
    // - Any authenticated user can read data from these collections.
    // - This is necessary for pages like Blog, Donors List, FAQ, etc.
    // - Writes are restricted to admins (implicitly, through server-side logic).
    match /blogPosts/{postId} {
      allow get, list: if request.auth != null;
    }
    
    match /faqs/{faqId} {
        allow get, list: if request.auth != null;
    }

    match /bloodRequests/{reqId} {
      allow get, list: if request.auth != null;
    }
    
    match /teamMembers/{memberId} {
      allow get, list: if request.auth != null;
    }

    match /testimonials/{testimonialId} {
      allow get, list: if request.auth != null;
    }

    // Feedback Collection
    // - Authenticated users can create feedback.
    // - Only admins can read, update or delete feedback.
    match /feedback/{feedbackId} {
        allow create: if request.auth != null;
        allow read, update, delete: if isAdmin();
    }

    // Reports Collection
    // - Authenticated users can create reports.
    // - Only admins can read, update or delete reports.
    match /reports/{reportId} {
        allow create: if request.auth != null;
        allow read, update, delete: if isAdmin();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
