rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      // Check if the requesting user has the 'admin' role in their own donor document
      return get(/databases/$(database)/documents/donors/$(request.auth.uid)).data.role == 'admin';
    }

    // Donors collection
    match /donors/{userId} {
      // Allow users to read their own data
      allow get: if request.auth.uid == userId;
      // Allow users to update their own data
      allow update: if request.auth.uid == userId;
      // Allow new users to create their own account (signup)
      allow create: if request.auth.uid == userId;
    }
    
    // Admins can list and get any donor
    match /donors/{document=**} {
      allow list, get: if isAdmin();
    }

    // Publicly readable collections
    match /blogPosts/{docId} {
      allow get: if true;
      allow write: if isAdmin();
    }
    match /faqs/{docId} {
      allow get: if true;
      allow write: if isAdmin();
    }
    match /teamMembers/{docId} {
      allow get: if true;
      allow write: if isAdmin();
    }
    match /testimonials/{docId} {
      allow get, create: if true;
      allow write: if isAdmin();
    }

    // Blood Requests
    match /bloodRequests/{requestId} {
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }
  }
}
